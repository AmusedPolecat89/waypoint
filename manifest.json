{
  "manifest_version": 3,
  "name": "Waypoint",
  "description": "Remember where you left off.",
  "version": "0.1.0",
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "identity"
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  }
}
